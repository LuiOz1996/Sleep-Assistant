<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConnectSmartWatch"
    android:background="@drawable/gradient_for_connect_smart_watch">

    <TextView
        android:id="@+id/status_of_bluetoth"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/button_turn_on_bt"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/turn_on_bluetooth"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp"
        android:textSize="20sp"
        android:background="@drawable/butten"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/button_turn_off_bt"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="@string/turn_off_bluetooth"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="160dp"
        android:textSize="20sp"
        android:background="@drawable/butten"
        android:textColor="#FFFFFF"/>


    <Button
        android:id="@+id/button_connect_smart_watch"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:text="@string/connect_a_smart_watch"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="250dp"
        android:textSize="20sp"
        android:background="@drawable/butten"
        android:textColor="#FFFFFF"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="330dp"
        tools:listitem="@layout/item_for_bluetooth"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:id="@+id/recycle_bluetooth">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/button_go_back_cw"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="550dp"
        android:background="@drawable/icon_home"/>


</RelativeLayout>
</layout>